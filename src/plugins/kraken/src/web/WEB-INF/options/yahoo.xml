<?xml version="1.0" encoding="UTF-8"?>
<optionsconfig>
    <leftpanel>
        <item type="toggle" sysprop="plugin.gateway.yahoo.reconnect" var="autoreconnect" desckey="gateway.web.transports.autoreconnect" default="true">
            <item type="text" sysprop="plugin.gateway.yahoo.reconnectattempts" var="autoreconnectattempts" desckey="gateway.web.transports.autoreconnectattempts" default="3" size="5" maxlength="5"/>
        </item>
    </leftpanel>
    <rightpanel>
        <item type="text" sysprop="plugin.gateway.yahoo.connecthost" var="host" desckey="gateway.web.transports.host" default="scs.msg.yahoo.com"/>
        <item type="text" sysprop="plugin.gateway.yahoo.connectport" var="port" desckey="gateway.web.transports.port" default="5050"/>
        <item type="toggle" sysprop="plugin.gateway.yahoo.mailnotifications" var="mailnotifications" desckey="gateway.web.transports.mailnotifications" default="true"/>
    </rightpanel>
</optionsconfig>

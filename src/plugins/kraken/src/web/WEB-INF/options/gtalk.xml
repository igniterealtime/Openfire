<?xml version="1.0" encoding="UTF-8"?>
<optionsconfig>
    <leftpanel>
        <item type="toggle" sysprop="plugin.gateway.gtalk.avatars" var="avatars" desckey="gateway.web.transports.buddyicons" default="true"/>
        <item type="toggle" sysprop="plugin.gateway.gtalk.reconnect" var="autoreconnect" desckey="gateway.web.transports.autoreconnect" default="true">
            <item type="text" sysprop="plugin.gateway.gtalk.reconnectattempts" var="autoreconnectattempts" desckey="gateway.web.transports.autoreconnectattempts" default="3" size="5" maxlength="5"/>
        </item>
    </leftpanel>
    <rightpanel>
        <item type="text" sysprop="plugin.gateway.gtalk.connecthost" var="host" desckey="gateway.web.transports.host" default="talk.google.com"/>
        <item type="text" sysprop="plugin.gateway.gtalk.connectport" var="port" desckey="gateway.web.transports.port" default="5222"/>
        <item type="toggle" sysprop="plugin.gateway.gtalk.mailnotifications" var="mailnotifications" desckey="gateway.web.transports.mailnotifications" default="true"/>
    </rightpanel>
</optionsconfig>
<?xml version="1.0" encoding="UTF-8"?>
<optionsconfig>
    <leftpanel>
        <item type="toggle" sysprop="plugin.gateway.irc.reconnect" var="autoreconnect" desckey="gateway.web.transports.autoreconnect" default="true">
            <item type="text" sysprop="plugin.gateway.irc.reconnectattempts" var="autoreconnectattempts" desckey="gateway.web.transports.autoreconnectattempts" default="3" size="5" maxlength="5"/>
        </item>
    </leftpanel>
    <rightpanel>
        <item type="text" sysprop="plugin.gateway.irc.connecthost" var="host" desckey="gateway.web.transports.host" default="irc.freenode.net"/>
        <item type="text" sysprop="plugin.gateway.irc.connectport" var="port" desckey="gateway.web.transports.port" default="7000"/>
        <item type="toggle" sysprop="plugin.gateway.irc.roomlist" var="allowlist" desckey="gateway.web.transports.allowroomlist" default="false" alert="gateway.irc.roomlistwarning"/>
    </rightpanel>
</optionsconfig>
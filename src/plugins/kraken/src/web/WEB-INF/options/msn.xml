<?xml version="1.0" encoding="UTF-8"?>
<optionsconfig>
    <leftpanel>
        <item type="toggle" sysprop="plugin.gateway.msn.avatars" var="avatars" desckey="gateway.web.transports.buddyicons" default="true"/>
        <item type="toggle" sysprop="plugin.gateway.msn.reconnect" var="autoreconnect" desckey="gateway.web.transports.autoreconnect" default="true">
            <item type="text" sysprop="plugin.gateway.msn.reconnectattempts" var="autoreconnectattempts" desckey="gateway.web.transports.autoreconnectattempts" default="3" size="5" maxlength="5"/>
        </item>
    </leftpanel>
    <rightpanel>
        <item type="text" sysprop="plugin.gateway.msn.connecthost" var="host" desckey="gateway.web.transports.host" default="messenger.hotmail.com"/>
        <item type="text" sysprop="plugin.gateway.msn.connectport" var="port" desckey="gateway.web.transports.port" default="1863"/>
        <item type="toggle" sysprop="plugin.gateway.msn.mailnotifications" var="mailnotifications" desckey="gateway.web.transports.mailnotifications" default="true"/>
        <item type="toggle" sysprop="plugin.gateway.msn.autonickname" var="autonick" desckey="gateway.web.transports.autonickname" default="false"/>
        <item type="toggle" sysprop="plugin.gateway.msn.uselegacyprotocol" var="legacyprotocol" desckey="gateway.web.transports.uselegacyprotocol" default="true"/>
    </rightpanel>
</optionsconfig>

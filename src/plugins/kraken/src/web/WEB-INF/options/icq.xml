<?xml version="1.0" encoding="UTF-8"?>
<optionsconfig>
    <leftpanel>
        <item type="toggle" sysprop="plugin.gateway.icq.avatars" var="avatars" desckey="gateway.web.transports.buddyicons" default="true"/>
        <item type="toggle" sysprop="plugin.gateway.icq.reconnect" var="autoreconnect" desckey="gateway.web.transports.autoreconnect" default="true">
            <item type="text" sysprop="plugin.gateway.icq.reconnectattempts" var="autoreconnectattempts" desckey="gateway.web.transports.autoreconnectattempts" default="3" size="5" maxlength="5"/>
        </item>
    </leftpanel>
    <rightpanel>
        <item type="text" sysprop="plugin.gateway.icq.connecthost" var="host" desckey="gateway.web.transports.host" default="login.icq.com"/>
        <item type="text" sysprop="plugin.gateway.icq.connectport" var="port" desckey="gateway.web.transports.port" default="5190"/>
        <item type="text" sysprop="plugin.gateway.icq.encoding" var="encoding" desckey="gateway.web.transports.encoding" default="iso-8859-1"/>
        <item type="toggle" sysprop="plugin.gateway.icq.mailnotifications" var="mailnotifications" desckey="gateway.web.transports.mailnotifications" default="true"/>
        <item type="toggle" sysprop="plugin.gateway.icq.crosschat" var="crosschat" desckey="gateway.oscar.crosschat" default="true"/>
    </rightpanel>
</optionsconfig>
